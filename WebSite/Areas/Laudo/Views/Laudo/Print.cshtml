@model AppServices.Dtos.LaudoDto

@{
    Layout = null;
}

@{
    var dia = Model.LaudoDtRealizacao.ToString("dd");
    var mes = Model.LaudoDtRealizacao.ToString("MM");
    
    if (mes.Equals("01")){mes = "janeiro";}
    else if (mes.Equals("02")){mes = "fevereiro";}
    else if (mes.Equals("03")) { mes = "março"; }
    else if (mes.Equals("04")) { mes = "abril"; }
    else if (mes.Equals("05")) { mes = "maio"; }
    else if (mes.Equals("06")) { mes = "junho"; }
    else if (mes.Equals("07")) { mes = "julho"; }
    else if (mes.Equals("08")) { mes = "agosto"; }
    else if (mes.Equals("09")) { mes = "setembro"; }
    else if (mes.Equals("10")) { mes = "outubro"; }
    else if (mes.Equals("11")) { mes = "novembro"; }
    else if (mes.Equals("12")) { mes = "dezembro"; }

    var ano = Model.LaudoDtRealizacao.ToString("yyyy");
    var hora = Model.LaudoDtRealizacao.ToString("HH");
    var minuto = Model.LaudoDtRealizacao.ToString("mm");
    var dtCadastro = Model.LaudoDtRealizacao.ToString("dd/MM/yyyy HH:mm");
    var nomePaciente = Model.LaudoPaciente.PacienteNome;
    var nomeMedicoSolicitante = Model.LaudoMedicoSolicitante.MedicoNome;
    var nomeMedicoLaudador = Model.LaudoMedicoLaudador.MedicoNome;
    var nomeConvenio = Model.LaudoConvenio.ConvenioNome;
    var descricaoRitmo = Model.LaudoRitmo.RitmoDescricao;
    var descricaoComplemento = Model.LaudoComplemento;
    var descricaoConclusoes = "";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myform" }))
{
    @Html.AntiForgeryToken()
    <title>Laudo - @nomePaciente</title>
    <body style="background-color:transparent">
        <table id="principal" style="background-image: url(../../../../Images/layoutlaudo.png); width:794px; height:1123px; background-color:red; margin-left:auto; margin-right:auto">
            <tr style="border:0px;">
                <td valign="top" align="right" style="font-size:14px;align-content:center; width:100%;float:right; margin:320px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 80px 0px 0px">
                        Data de realização: @dia de @mes de @ano
                        <br />
                        às @hora:@minuto
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px; text-transform: uppercase;align-content:center; width:100%;float:right; margin:40px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial; font-weight:bold;margin: 0px 0px 0px 80px; color:#cf3c40">
                        @nomePaciente 
                        <br />
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:20px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 0px 0px 80px; color:#434343; text-transform: capitalize">
                        Médico Solicitante: Dr(a). @nomeMedicoSolicitante
                        <br />
                        Convênio: @nomeConvenio
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:40px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial; font-weight:bold;margin: 0px 0px 0px 80px; color:#cf3c40">
                        RITMO
                        <br />
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:20px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 0px 0px 80px; color:#434343;text-transform: capitalize">
                        @descricaoRitmo
                    </p>
                </td>
                <td valign="top" align="center" style="text-align:center;background-color:#cf3c40;font-size:14px;width:100%; height:50px;float:right; margin:40px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial; font-weight:bold;margin: 18px 0px 0px 0px; color:#ffffff">
                        CONCLUSÃO
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:20px 0px 0px 0px; padding:0">
                    @foreach (var item in Model.LaudoConclusoes)
                    {
                        <p style="font-family:Arial;margin:0px 0px 0px 80px; color:#434343;text-transform: capitalize">- @item.ConclusaoDescricao</p>
                    }
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:20px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 0px 0px 80px; color:#434343">
                        @descricaoComplemento
                    </p>
                </td>
                <td valign="top" align="right" style="font-size:14px;align-content:center; width:100%;float:right; margin:20 0 20 0 ; padding:0">
                    <div style="background-color:#cf3c40; height:1px; width:auto;"></div>
                </td>
              
                <td valign="top" align="right" style="font-size:14px;align-content:center; width:100%;float:right; margin:40px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 80px 80px 0px">
                        Médico responsável pelo laudo:
                    </p>
                </td>
                <td valign="top" align="right" style="font-size:14px;align-content:center; width:100%;float:right; margin:0px 0px 0px 0px; padding:0">
               
                </td>
                <td valign="top" align="right" style="font-size:12px;align-content:center; width:100%;float:right; margin:0px 0px 0px 0px; padding:0 80 0 0">
                    <p align="center" style="font-family:Arial;margin: 0px 80px 0px 0px;text-transform: capitalize">
                        <div style="background-color:#6f7577; height:1px; width:200px;"></div>
                        
                    </p>
                </td>
                <td valign="top" align="right" style="font-size:14px;align-content:center; width:100%;float:right; margin:0px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 80px 80px 0px; text-transform: capitalize">
                        Dr(a). @nomeMedicoLaudador
                    </p>
                </td>
                <td valign="top" align="left" style="font-size:14px;align-content:center; width:100%;float:right; margin:20px 0px 0px 0px; padding:0">
                    <p style="font-family:Arial;margin: 0px 0px 0px 80px; color:#434343;text-transform: capitalize">
                        Referência: III Diretrizes da Sociedade Brasileira de Cardiologia sobre Análise e Emissão de Laudos Eletrocardiográficos. Arq Bras Cardiol. 2016; 106(4Supl.1):1-23 
                    </p>
                </td>
            </tr>
        </table>
    </body>
}
